<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">

    <!-- Top Decoration Circle -->
    <View
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-150dp"
        android:layout_marginEnd="-150dp"
        android:alpha="0.1"
        android:background="@drawable/circle_shape" />

    <!-- Bottom Decoration Circle -->
    <View
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="-120dp"
        android:layout_marginStart="-120dp"
        android:alpha="0.1"
        android:background="@drawable/circle_shape" />

    <!-- Main Content -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <!-- Logo Card with Gradient -->
        <androidx.cardview.widget.CardView
            android:id="@+id/logoCard"
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:layout_marginBottom="40dp"
            app:cardCornerRadius="110dp"
            app:cardElevation="24dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/logo_gradient">

                <!-- Microphone Icon with Shadow -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <!-- Main Icon -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸŽ¤"
                        android:textSize="90sp"
                        android:elevation="8dp" />

                    <!-- App Initials -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="SB"
                        android:textColor="@android:color/white"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-black"
                        android:letterSpacing="0.1"
                        android:elevation="4dp" />
                </LinearLayout>

                <!-- Decorative Ring -->
                <View
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/ring_shape"
                    android:alpha="0.3" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <!-- App Name with Modern Font -->
        <TextView
            android:id="@+id/appName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/speech_buddy"
            android:textColor="@color/white"
            android:textSize="52sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-black"
            android:letterSpacing="0.05"
            android:shadowColor="#E91E63"
            android:shadowDx="0"
            android:shadowDy="4"
            android:shadowRadius="8" />

        <!-- Premium Underline -->
        <View
            android:id="@+id/underline"
            android:layout_width="120dp"
            android:layout_height="4dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/underline_gradient"
            android:visibility="invisible" />

        <!-- Tagline with Better Spacing -->
        <TextView
            android:id="@+id/tagline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/learn_to_speak_with_fun"
            android:textColor="@color/gray_50"
            android:textSize="24sp"
            android:fontFamily="sans-serif-light"
            android:letterSpacing="0.08"
            android:shadowColor="#9C27B0"
            android:shadowDx="0"
            android:shadowDy="2"
            android:shadowRadius="4" />

        <!-- Animated Loading Indicator -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="56dp"
            android:orientation="horizontal"
            android:gravity="center">

            <ProgressBar
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:indeterminateTint="@android:color/white"
                android:layout_marginEnd="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loading..."
                android:textColor="@color/gray_700"
                android:textSize="16sp"
                android:fontFamily="sans-serif-medium"
                android:alpha="0.9" />
        </LinearLayout>
    </LinearLayout>

    <!-- Modern Footer -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        android:orientation="vertical"
        android:gravity="center">

        <!-- Features Badges -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸŽ¯ AI Powered"
                android:textColor="@color/gray_500"
                android:textSize="14sp"
                android:fontFamily="sans-serif-medium"
                android:alpha="0.8"
                android:paddingHorizontal="12dp"
                android:paddingVertical="4dp"
                android:background="@drawable/badge_background"
                android:layout_marginEnd="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="âœ¨ Interactive"
                android:textColor="@color/gray_500"
                android:textSize="14sp"
                android:fontFamily="sans-serif-medium"
                android:alpha="0.8"
                android:paddingHorizontal="12dp"
                android:paddingVertical="4dp"
                android:background="@drawable/badge_background" />
        </LinearLayout>

        <!-- Version Info -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Version 1.0.0"
            android:textColor="@android:color/white"
            android:textSize="11sp"
            android:fontFamily="sans-serif"
            android:alpha="0.5" />
    </LinearLayout>
</RelativeLayout>

